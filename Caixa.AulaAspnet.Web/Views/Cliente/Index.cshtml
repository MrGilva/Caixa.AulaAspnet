@model IEnumerable<Caixa.AulaAspnet.Entidades.Modelos.Cliente>

@{
    ViewBag.Title = "Cliente";
}

<h3>@ViewBag.Title</h3>

<hr />

<p>
    @Html.ActionLink("Adicionar", "Create", null, new { @class="btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", null, new { id=item.ClienteID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalhar", "Details", null, new { id=item.ClienteID }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Deletar", "Delete", null, new { id=item.ClienteID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
